{
  "name": "rest-hooks",
  "version": "1.0.1",
  "description": "Simple typed React hooks for REST APIs",
  "sideEffects": false,
  "main": "dist/index.cjs.js",
  "module": "lib/index.js",
  "unpkg": "dist/index.umd.min.js",
  "types": "lib/index.d.ts",
  "files": [
    "dist",
    "lib",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build:lib": "NODE_ENV=production babel src --out-dir lib --source-maps inline --extensions '.ts,.tsx,.js' --ignore '**/__tests__/**' --ignore '**/*.d.ts'",
    "build:types": "tsc --emitDeclarationOnly -p ./src",
    "build:bundle": "rollup -c",
    "build:clean": "rimraf lib",
    "build": "npm run build:lib && npm run build:types && cp ./src/resource/normal.d.ts ./lib/resource/normal.d.ts",
    "dev": "yarn run build:lib -w",
    "prepare": "npm run build:clean && npm run build",
    "prepublishOnly": "npm run build:bundle",
    "lint": "eslint --ext .ts,.tsx",
    "test": "bnr run-test",
    "test:ci": "npm test -- --ci",
    "test:watch": "npm test -- --watch",
    "test:coverage": "npm test -- --coverage",
    "changelog": "npx auto-changelog --stdout",
    "beforeStage": "npx auto-changelog"
  },
  "keywords": [
    "rest",
    "react",
    "flux",
    "ajax",
    "networking",
    "suspense",
    "fetch",
    "data fetching",
    "api",
    "typescript"
  ],
  "author": "Nathaniel Tucker <me@ntucker.me> (https://github.com/ntucker)",
  "license": "Apache-2.0",
  "homepage": "https://github.com/coinbase/rest-hooks",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:coinbase/rest-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/coinbase/issues"
  },
  "betterScripts": {
    "run-test": {
      "command": "jest",
      "env": {
        "NODE_ENV": "test"
      }
    }
  },
  "auto-changelog": {
    "template": "changelog.hbs",
    "breakingPattern": "\\[breaking\\]",
    "unreleased": true,
    "commitLimit": false
  },
  "github": {
    "release": true
  },
  "devDependencies": {
    "@anansi/babel-preset": "0.11.3",
    "@anansi/eslint-config": "^0.6.2",
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/plugin-transform-runtime": "^7.3.4",
    "@types/jest": "^24.0.9",
    "@types/lodash": "^4.14.121",
    "@types/nock": "^9.3.1",
    "@types/qs": "^6.5.1",
    "@types/sinon": "^7.0.8",
    "@typescript-eslint/eslint-plugin": "^1.4.2",
    "@typescript-eslint/parser": "^1.4.2",
    "auto-changelog": "^1.11.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^24.1.0",
    "babel-plugin-root-import": "^6.1.0",
    "better-npm-run": "^0.1.1",
    "eslint": "^5.14.1",
    "ignore-styles": "^5.0.1",
    "jest": "^24.1.0",
    "nock": "^10.0.6",
    "prettier-eslint-cli": "^4.7.1",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "react-testing-library": "^5.9.0",
    "rollup": "^1.4.0",
    "rollup-plugin-babel": "^4.3.2",
    "rollup-plugin-commonjs": "^9.2.1",
    "rollup-plugin-filesize": "^6.0.1",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.1",
    "rollup-plugin-uglify": "^6.0.2",
    "sinon": "^7.2.5",
    "ts-jest": "^24.0.0",
    "typescript": "^3.3.3333",
    "uglify-es": "^3.3.9"
  },
  "dependencies": {
    "@types/react": "^16.8.6",
    "@types/superagent": "^3.8.7",
    "core-js": "^2.6.5",
    "flux-standard-action": "^2.0.3",
    "lodash": "^4.17.11",
    "normalizr": "^3.3.0",
    "regenerator-runtime": "^0.13.1",
    "reselect": "^4.0.0",
    "superagent": "^4.1.0"
  },
  "peerDependencies": {
    "react": "^16.8.2"
  }
}
